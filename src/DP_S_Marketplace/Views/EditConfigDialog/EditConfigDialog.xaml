<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog
    x:Class="DP_S_Marketplace.Views.EditConfigDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:DP_S_Marketplace.Helpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DP_S_Marketplace.Views"
    xmlns:models="using:DP_S_Marketplace.Models"
    Title="编辑脚本配置"
    Width="600"
    Height="400"
    Background="{ThemeResource AcrylicBackgroundFillColorBaseBrush}"
    DefaultButton="Primary"
    PrimaryButtonText="确定"
    SecondaryButtonText="取消"
    Style="{StaticResource DefaultContentDialogStyle}">
    <ContentDialog.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </ContentDialog.Resources>
    <Grid>
        <TextBox
            x:Name="REBCustom"
            Height="200"
            Margin="10"
            AcceptsReturn="True"
            FontFamily="Consolas"
            FontSize="14"
            Text="{x:Bind ViewModel.EditConfigFile, Mode=TwoWay}"
            TextWrapping="NoWrap" />

    </Grid>
</ContentDialog>
